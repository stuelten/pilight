<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<GridPane xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="de.ckc.agwa.pilight.config.WlanConfigUIController"
          alignment="center" hgap="10" vgap="10" styleClass="root">
    <padding>
        <Insets top="5" right="25" bottom="5" left="25"/>
    </padding>

    <Text id="welcome-text" text="%welcome-text.text"
          GridPane.columnIndex="0"
          GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Label text="%wlanName.label"
           GridPane.columnIndex="0"
           GridPane.rowIndex="1"/>

    <TextField fx:id="wlanName"
               GridPane.columnIndex="1"
               GridPane.rowIndex="1"/>

    <Label text="%wlanPasswd.label"
           GridPane.columnIndex="0"
           GridPane.rowIndex="2"/>

    <PasswordField fx:id="wlanPasswd"
                   GridPane.columnIndex="1"
                   GridPane.rowIndex="2"/>

    <HBox spacing="10" alignment="BOTTOM_LEFT" GridPane.columnIndex="0"
          GridPane.rowIndex="6" ><!-- prefWidth="255" -->
        <Button id="actionCancel"
                text="%actionCancel.text" prefWidth="%actionCancel.prefWidth"
                onAction="#handleCancel"/>
    </HBox>

    <HBox spacing="10" alignment="BOTTOM_RIGHT" GridPane.columnIndex="1"
          GridPane.rowIndex="6" >
        <Button id="actionSaveConfig"
                text="%actionSaveConfig.text" prefWidth="%actionSaveConfig.prefWidth"
                onAction="#handleSaveConfig"/>
    </HBox>

    <Text fx:id="statusText"
          GridPane.columnIndex="0"
          GridPane.rowIndex="7"
          GridPane.columnSpan="2"/>

    <stylesheets>
        <URL value="@PiLightConfig.css"/>
    </stylesheets>

</GridPane>
